int bfs(int x)
{
	int par = -1;
	vis[x] = true;
	q.push(x);
	while (!q.empty()) 
	{
		int s = q.front(); 
		q.pop();
		for (auto u : g[s])
		{
			if (vis[u]||u==par) continue;
			vis[u] = true;
			q.push(u);
		}
		par = s;
	}
}
