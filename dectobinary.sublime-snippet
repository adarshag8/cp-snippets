string binary(int n){
	string ans;
	int r = 1 + log2(n);
	trace(r);
	for(int i = 0; i < r; i++){
		if(n & (1ll<<i)) ans.pb('1');
		else ans.pb('0');
	}
	reverse(all(ans));
	return ans;
}
]]></content>
